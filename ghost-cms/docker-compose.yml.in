version: '3.3'

services:
  ghost:
    image: ghost:4.34.3-alpine
    restart: always
    ports:
      - 2368:2368
    environment:
      url: https://<domain>
    volumes:
      - ./ghost:/var/lib/ghost/content

  nginx:
    image: nginx
    restart: always
    depends_on:
      - ghost
    ports:
      - 80:80
    volumes:
      - ./nginx:/etc/nginx/conf.d/
